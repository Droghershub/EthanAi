<div class="row" id="incomeExpeneseChart" ng-controller="IncomeExpeneseController">
    <div class="col-lg-6 col-sm-12">
        <div class="panel panel-default" tutorial="in-ex-income" config-data="{height: 15, left: -13}">
            <div class="panel-heading">{{"Income" | translate}}</div>
            <treasure-overlay-spinner active='spinner.active'>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-1 col-md-1 col-sm-1 col-xs-1 vertical-text ">
                            {{"Income" | translate}}
                        </div>
                        <div class="col-lg-11 col-md-11 col-sm-11 col-xs-11">

                            <canvas id="income-chart" class="chart chart-base ng-isolate-scope" chart-type="incomeChart.type" data="incomeChart.data" labels="incomeChart.labels" options="incomeChart.options"
