                            <div class="size-box-color" style="background-color:#008000"></div>
                        </div>
                        <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8">
                            {{"Income from salary" | translate}}
                        </div>
                    </div>
                </div>
            </treasure-overlay-spinner>
