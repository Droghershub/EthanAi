    <script src="~/Scripts/bto/service/zoomService.js"></script>
    <script src="~/Scripts/bto/service/playbackService.js"></script>
    <script src="~/Scripts/bto/service/common.js"></script>
    <script src="~/Scripts/bto/controller/mainController.js"></script>
    <script src="~/Scripts/bto/utils.js"></script>
    <script src="~/Scripts/bto/timelineControl.js"></script>
    <script src="~/Scripts/bto/timelineFunctions.js"></script>
    <script src="~/Scripts/bto/directive/directive.js"></script>
