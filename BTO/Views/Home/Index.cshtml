    <script src="~/Scripts/thirdparty/ng-currency.js"></script>
    <script src="~/Scripts/thirdparty/input-masks.js"></script>
    <script src="~/Scripts/thirdparty/i18n/angular-locale_es-ar.js"></script>
    <script src="~/Scripts/thirdparty/ocanvas-2.7.4.js"></script>
    <script src="~/Scripts/thirdparty/chart/Chart.js"></script>
